generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  displayName  String?  @map("display_name")
  timezone     String   @default("UTC")
  lastLoginAt       DateTime? @map("last_login_at")
  weeklyDigestOptIn Boolean   @default(false) @map("weekly_digest_opt_in")
  weeklyDigestToken String?   @unique         @map("weekly_digest_token")
  createdAt         DateTime  @default(now()) @map("created_at")

  symptoms      Symptom[]
  symptomLogs   SymptomLog[]
  moodLogs      MoodLog[]
  medications   Medication[]
  medicationLogs MedicationLog[]
  habits        Habit[]
  habitLogs     HabitLog[]
  refreshTokens RefreshToken[]
  passwordResetTokens PasswordResetToken[]
  auditLogs     AuditLog[]

  @@map("users")
}

model Symptom {
  id       String  @id @default(cuid())
  userId   String? @map("user_id")
  name     String
  category String?
  isActive Boolean @default(true) @map("is_active")

  user        User?        @relation(fields: [userId], references: [id], onDelete: Cascade)
  symptomLogs SymptomLog[]

  @@index([userId])
  @@map("symptoms")
}

model SymptomLog {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  symptomId String   @map("symptom_id")
  severity  Int
  notes     String?
  loggedAt  DateTime @default(now()) @map("logged_at")
  createdAt DateTime @default(now()) @map("created_at")

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  symptom Symptom @relation(fields: [symptomId], references: [id], onDelete: Cascade)

  @@index([userId, loggedAt])
  @@map("symptom_logs")
}

model MoodLog {
  id          String   @id @default(cuid())
  userId      String   @map("user_id")
  moodScore   Int      @map("mood_score")
  energyLevel Int?     @map("energy_level")
  stressLevel Int?     @map("stress_level")
  notes       String?
  loggedAt    DateTime @default(now()) @map("logged_at")
  createdAt   DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, loggedAt])
  @@map("mood_logs")
}

model Medication {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  name      String
  dosage    String?
  frequency String?
  isActive  Boolean  @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")

  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  medicationLogs  MedicationLog[]

  @@index([userId])
  @@map("medications")
}

model MedicationLog {
  id           String    @id @default(cuid())
  userId       String    @map("user_id")
  medicationId String    @map("medication_id")
  taken        Boolean   @default(true)
  takenAt      DateTime? @map("taken_at")
  notes        String?
  createdAt    DateTime  @default(now()) @map("created_at")

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  medication Medication @relation(fields: [medicationId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("medication_logs")
}

enum TrackingType {
  boolean
  numeric
  duration
}

model Habit {
  id           String       @id @default(cuid())
  userId       String?      @map("user_id")
  name         String
  trackingType TrackingType @map("tracking_type")
  unit         String?
  isActive     Boolean      @default(true) @map("is_active")

  user      User?      @relation(fields: [userId], references: [id], onDelete: Cascade)
  habitLogs HabitLog[]

  @@index([userId])
  @@map("habits")
}

model HabitLog {
  id            String       @id @default(cuid())
  userId        String       @map("user_id")
  habitId       String       @map("habit_id")
  valueBoolean  Boolean?     @map("value_boolean")
  valueNumeric  Float?       @map("value_numeric")
  valueDuration Int?         @map("value_duration")
  notes         String?
  loggedAt      DateTime     @default(now()) @map("logged_at")
  createdAt     DateTime     @default(now()) @map("created_at")

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@index([userId, loggedAt])
  @@map("habit_logs")
}

model RefreshToken {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("refresh_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  userId    String   @map("user_id")
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  used      Boolean  @default(false)
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

enum AuditAction {
  login
  password_change
  email_change
}

model AuditLog {
  id        String      @id @default(cuid())
  userId    String      @map("user_id")
  action    AuditAction
  metadata  Json?
  createdAt DateTime    @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@map("audit_logs")
}
